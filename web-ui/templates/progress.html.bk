<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Copy Progress</title>
    <!-- Link to local Bootstrap CSS -->
    <link rel="stylesheet" href="/bootstrap-5.3.3-dist/css/bootstrap.min.css">

    <style>
        /* Container for the entire progress section */
        .progress-container {
            max-width: 600px; /* Adjust width for mobile optimization */
            margin: 2rem auto;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Soft shadow */
        }

        /* Heading style */
        h1 {
            text-align: center;
            margin-bottom: 1rem;
            font-size: 1.5rem; /* Larger font size */
            font-weight: 600;
            color: #333;
            background-color: #fff; /* White background to separate the heading */
            padding: 0.5rem; /* Padding around the heading */
            border-radius: 8px; /* Rounded corners for the heading */
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        /* Progress bar styling */
        #progress_bar {
            width: 100%;
            height: 20px;
            background-color: #ddd;
            border-radius: 5px;
            margin: 20px auto; /* Centers the progress bar */
            position: relative;
        }

        #progress_bar_inner {
            height: 100%;
            background-color: #4CAF50;
            width: 0%;
            border-radius: 5px;
            position: relative;
        }

        #progress_text {
            position: absolute;
            width: 100%;
            text-align: center;
            font-weight: bold;
        }

        /* Mobile-specific adjustments */
        @media (max-width: 576px) {
            h1 {
                font-size: 1.2rem; /* Smaller title for smaller screens */
            }

            .progress-container {
                padding: 1rem; /* Adjust padding for smaller screens */
            }
        }
    </style>

    <script src="/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateProgress() {
            fetch('/progress_status')
                .then(response => response.json())
                .then(data => {
                    const progressBarInner = document.getElementById("progress_bar_inner");
                    const progressText = document.getElementById("progress_text");
                    progressBarInner.style.width = `${data.overall_progress}%`;
                    progressText.innerText = `${data.overall_progress.toFixed(2)}%`;
                    document.getElementById("copy_progress").innerText = data.copy_progress;

                    if (data.copy_complete || data.overall_progress === 100) {
                        window.location.href = `/folder_selection?source_folders=${JSON.stringify(data.source_folders)}&destination_folders=${JSON.stringify(data.destination_folders)}`;
                    }
                })
                .catch(error => {
                    console.error('Error fetching progress:', error);
                });
        }

        setInterval(updateProgress, 1000); // Update every second
    </script>
</head>
<body>
    <div class="progress-container">
        <h1>Copy Progress</h1>
        <p id="copy_progress">{{ copy_progress }}</p>
        <div id="progress_bar">
            <div id="progress_bar_inner"></div>
            <div id="progress_text">0%</div>
        </div>
    </div>
</body>
</html>

