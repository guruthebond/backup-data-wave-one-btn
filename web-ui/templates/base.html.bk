<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>
    <!-- Link to local Bootstrap CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='bootstrap-5.3.3-dist/css/bootstrap.min.css') }}">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            transition: background-color 0.3s, color 0.3s;
        }

        /* Light mode styles */
        body.light-mode {
            background-color: #fff;
            color: #333;
        }

        /* Dark mode styles */
        body.dark-mode {
            background-color: #121212;
            color: #f0f0f0;
        }

        /* Custom Navbar Style */
        .navbar {
            background-color: var(--navbar-bg, white); /* Variable for navbar background */
            border-bottom: 1px solid var(--navbar-border, #ddd);
        }

        .navbar-nav {
            display: flex;
            justify-content: center;
            list-style-type: none;
            padding-left: 0;
        }

        .navbar-nav .nav-item {
            margin-right: 15px;
        }

        .navbar .nav-link {
            color: var(--nav-link-color, #333);
            font-size: 1.2rem;
            padding: 0.5rem;
            display: flex;
            align-items: center;
        }

        .icon {
            width: 24px;
            height: 24px;
            margin-right: 8px;
        }

        .navbar .nav-link:hover {
            color: var(--nav-link-hover, #17a2b8);
        }

        .container {
            padding-top: 1rem;
        }

        /* Variables for light and dark mode */
        :root.light-mode {
            --navbar-bg: white;
            --navbar-border: #ddd;
            --nav-link-color: #333;
            --nav-link-hover: #17a2b8;
        }

        :root.dark-mode {
            --navbar-bg: #1e1e1e;
            --navbar-border: #333;
            --nav-link-color: #f0f0f0;
            --nav-link-hover: #61dafb;
        }

        /* Dark mode toggle button */
        .dark-mode-toggle {
            position: fixed;
            top: 10px;
            right: 10px;
            background: #333;
            color: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 1.5rem;
            transition: background-color 0.3s;
            z-index: 9999; /* Ensure the button is on top of other elements */
        }

        .dark-mode-toggle:hover {
            background: #555;
        }
    </style>
</head>
<body class="light-mode">
    <!-- Dark Mode Toggle Button -->
    <button class="dark-mode-toggle" id="darkModeToggle" title="Toggle Dark Mode">ðŸŒ™</button>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand navbar-light">
        <div class="container-fluid">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('index') }}">
                        <img src="{{ url_for('static', filename='icons/house-fill.svg') }}" class="icon" alt="Home">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('logs') }}">
                        <img src="{{ url_for('static', filename='icons/journal-text.svg') }}" class="icon" alt="Logs">
                        History
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('progress_page') }}">
                        <img src="{{ url_for('static', filename='icons/clipboard-check.svg') }}" class="icon" alt="Check Progress">
                        Status
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content Container -->
    <div class="container">
        {% block content %}{% endblock %}
    </div>

    <!-- Link to local Bootstrap JS -->
    <script src="{{ url_for('static', filename='bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js') }}"></script>
    <script>
        const darkModeToggle = document.getElementById('darkModeToggle');
        const body = document.body;

        // Load dark mode preference from localStorage
        if (localStorage.getItem('darkMode') === 'true') {
            body.classList.replace('light-mode', 'dark-mode');
        }

        // Toggle dark mode
        darkModeToggle.addEventListener('click', () => {
            const isDarkMode = body.classList.contains('dark-mode');
            body.classList.toggle('dark-mode', !isDarkMode);
            body.classList.toggle('light-mode', isDarkMode);

            // Save preference to localStorage
            localStorage.setItem('darkMode', !isDarkMode);
        });
    </script>
</body>
</html>

